
URxvt*depth: 50 --24
URxvt*geometry: 75x25
xURxvt.borderColor: #191918
URxvt.internalBorder: 10 
!URxvt.cursorUnderline: false
URxvt.cursorBlink: true

URxvt*iconFile: /usr/share/icons/Flattr/apps/scalable/bash.svg
!--Get solarized colors right
URxvt.intensityStyles: false
!URxvt*.transparent: true
!URxvt*.shading: 90
!URxvt*.blurRadius: 20


! -- scrollbar
URxvt.scrollstyle: plain
URxvt.scrollBar: false
URxvt*scrollTtyOuput: false
URxvt*scrollWidthBuffer: true
URxvt*scrollTtyKeypress: true

! -- login shell
URxvt*loginShell: false

! -- font
URxvt.font: xft:Hack:pixelsize=14
!URxvt.font: xft:Monospace:pixelsize=14
!URxvt.font: xft:Terminus:pixelsize=18
!URxvt.font: xft:Droid Sans Mono:size=10
!URxvt.font: xft:Ubuntu Mono:size=10
!URxvt.font: xft:PragmataPro:size=10
!URxvt.font: xft:Inconsolata:size=10
!URxvt.font: xft:Liberation Mono:size=10
!URxvt.font: xft:berry:pixelsize=12
!URxvt.font: xft:tewi-8
!URxvt.font: xft:terminus:size=8
!URxvt.font: xft:tamsyn:size=8
!URxvt.font: xft:cure-8
URxvt.boldFont: xft:Terminess Powerline:pixelsize=14
URxvt*letterSpace: 1
!URxvt*lineSpace: 2

! -- perl
!URxvt.perl-ext-common: default,tabbed
!URxvt.tabbed.tabbar-fg: 2
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tab-fg: 3
!URxvt.tab-bg: 0
URxvt*perl-lib:     /usr/lib/urxvt/perl
URxvt*perl-ext-common:  default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt*matcher.pattern.1:   \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
URxvt.keysym.Mod4-v: perl:clipboard:paste
!URxvt.colorUL: #9472ec
URxvt.transparent: true
URxvt.shading:20

! Included this so you know how to make your foreground not match the color of your background
URxvt.foreground: #eeeeee

URxvt.background:               #1b1b1b
URxvt.colorBD:                  #CFCFCF
URxvt.colorUL:                  #969696
URxvt.colorIT:                  #686868
